<div class="navbar-right">
    <ul class="nav navbar-nav">
        <%= render_nav_actions do |config, action|%>
            <li class="nav-item"><%= action %></li>
        <% end %>

        <% if has_user_authentication_provider? %>
            <% if current_user %>
                <li class="nav-item">
                    <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path, class: 'nav-link' %>
                </li>
                <% unless current_user.to_s.blank? -%>
                    <li class="nav-item">
                        <%= link_to current_user.name, root_path, class: 'nav-link' %>
                    </li>
                <% end %>
            <% else %>
                <li class="nav-item">
                    <%= link_to t('blacklight.header_links.login'), "/users/auth/google_oauth2", class: 'nav-link' %>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>
