<%= content_tag :h3, t('geoblacklight.home.institution.featured_collections_heading') %>
<div class='row featured-collections'>
    <% collections.each do |collection| %>
        <%= link_to search_catalog_path({f: collection[:f]}) do %>
        <div class='col-md-4'>
            <div class='panel panel-default'>
                <div class='panel-heading'>
                    <h3 class='panel-title'><%= collection[:title] %></h3>
                </div>
                <div class='panel-body'>
                    <%= collection[:description] %>
                </div>
            </div>
        </div>
        <% end %>
    <% end %>
</div>
